    $(document).ready(function () {
        var url = "data/orders.xml";
        // prepare the data
        var source =
                {
                    datatype: "xml",
                    datafields: [
                        {name: 'AgentName', },
                        {name: 'Department', },
                        {name: 'TimeOnline', },
                        {name: 'CompletedChats', },
                        {name: 'CurrentChats', },
                        {name: 'Available', }
                    ],
                    root: "entry",
                    record: "content",
                    id: 'AgentID',
                    url: url,
                    //sortcolumn: 'AgentName',
                    //sortdirection: 'asc'
                };
        var dataAdapter = new $.jqx.dataAdapter(source);

        // create jqxgrid.
        $("#jqxgrid").jqxGrid({
            width: '100%',
            //height: 450,
            autoheight: true,
            //autorowheight:true,
            columnsheight: 50,
            rowsheight: 50,
            pagerheight: 50,
            source: dataAdapter,
            sortable: true,
            pageable: true,
            showsortcolumnbackground: false,
            filterable: true,
            altrows: true,
            columns: [
                {text: 'Agent', datafield: 'AgentName', width: '25%'},
                {text: 'Department', datafield: 'Department', width: '25%'},
                {text: 'Time Online', datafield: 'TimeOnline', width: '16%'},
                {text: 'Completed Chats', datafield: 'CompletedChats', width: '12%', cellsalign: 'center'},
                {text: 'Current Chats', datafield: 'CurrentChats', width: '12%', cellsalign: 'center'},
                {text: 'Available', datafield: 'Available', width: '10%', cellsalign: 'center'}
            ]
        });
    });
</script>
